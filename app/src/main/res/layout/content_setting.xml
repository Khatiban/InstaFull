                android:gravity="center_vertical|left"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:textColor="@color/grey_app"
                android:textSize="14sp" />

            <View
                android:id="@+id/lin12"
                android:layout_width="fill_parent"
                android:layout_height="0.4dip"
                android:layout_below="@+id/name_folder_video_name"
                android:background="@color/grey_app" />


            <TextView
                android:id="@+id/name_folder_porfile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin12"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="?selectableItemBackground"
                android:paddingTop="15dp"
                android:text="Storage profile picture"
                android:textColor="@color/black_app"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/name_folder_porfile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_folder_porfile"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical|left"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:textColor="@color/grey_app"
                android:textSize="14sp" />

            <View
                android:id="@+id/lin13"
                android:layout_width="fill_parent"
                android:layout_height="0.4dip"
                android:layout_below="@+id/name_folder_porfile_name"
                android:background="@color/grey_app" />


            <TextView
                android:id="@+id/name_folder_story_pic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin13"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="?selectableItemBackground"
                android:paddingTop="15dp"
                android:text="Storage photo Stories"
                android:textColor="@color/black_app"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/name_folder_story_pic_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/name_folder_story_pic"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical|left"
                android:paddingBottom="10dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:textColor="@color/grey_app"
                android:textSize="14sp" />

            <View
                android:id="@+id/lin14"
                android:layout_width="fill_parent"
                android:layout_height="0.4dip"
                android:layout_below="@+id/name_folder_story_pic_name"
                android:background="@color/grey_app" />


            <TextView
                android:id="@+id/name_folder_story_video"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin14"
                android:layout_centerHorizontal="true"
                android:gravity="center_vertical"
                android:paddingBottom="5dp"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:background="?selectableItemBackground"
                android:paddingTop="15dp"
