                android:textColor="@color/grey_app"
                android:textSize="14sp" />

            <View
                android:id="@+id/lin15"
                android:layout_width="fill_parent"
                android:layout_height="0.4dip"
                android:layout_below="@+id/name_folder_story_video_name"
                android:background="@color/grey_app" />


            <TextView
                android:id="@+id/text_setting_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin15"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="55dp"
                android:gravity="left"
                android:text="About"
                android:layout_marginRight="15dp"
                android:textColor="@color/black_app"
                android:textSize="22sp" />

            <View
                android:id="@+id/lin20"
                android:layout_width="fill_parent"
                android:layout_height="2.0dip"
                android:layout_below="@+id/text_setting_3"
                android:layout_marginTop="10dp"
                android:background="@color/grey_app" />

            <View
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin20"
